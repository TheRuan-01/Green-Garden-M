<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="ui.RegistroActivity">

    <!-- ScrollView dentro do ConstraintLayout -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título de confirmação -->
            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:padding="16dp"
                android:text="Cadastro"
                android:textAlignment="center"
                android:textColor="#EF5925"
                android:textSize="25sp"
                android:textStyle="bold" />

            <!-- Campo de Nome -->
            <TextView
                android:id="@+id/labelNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:text="Nome"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <!-- Campo de E-mail -->
            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="E-mail"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <!-- Campo de Telefone -->
            <TextView
                android:id="@+id/labelTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="Telefone"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textTelefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />


            <!-- Campo de Senha -->
            <TextView
                android:id="@+id/labelSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:text="Senha"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:text="CPF"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textCPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <!-- Campos de Endereço -->
            <TextView
                android:id="@+id/labelRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:text="Rua"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textRua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="Número"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textNumero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="Complemento"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textComplemento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="CEP"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="Cidade"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/labelEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:text="Estado"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textSize="18sp" />

            <!-- Botões -->
            <Button
                android:id="@+id/btnConfirmarCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#0AC3A7"
                android:text="Confirmar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />



            <!-- Imagem do Logo -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
